{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "customConditions": ["development"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "exactOptionalPropertyTypes": true,
    "allowImportingTsExtensions": true,
    "lib": ["es2022", "DOM"],
    "module": "node16",
    "strict": true,
    "target": "es2022"
  },
  "exclude": ["coverage/", "node_modules/"],
  "include": [
    "src/**/*.ts",
    "node_modules/@types"
  ]
}
