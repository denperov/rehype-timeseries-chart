{
  "author": "Denis Perov",
  "name": "rehype-timeseries-chart",
  "version": "1.0.0",
  "keywords": ["rehype", "plugin", "markdown", "svg", "chart", "timeseries", "csv"],
  "description": "Rehype plugin to render CSV code blocks as SVG timeseries charts",
  "repository": {
    "type": "git",
    "url": "https://github.com/denperov/rehype-timeseries-chart.git"
  },
  "bugs": "https://github.com/denperov/rehype-timeseries-chart/issues",
  "license": "MIT",
  "type": "module",
  "exports": "./index.js",
  "files": [
    "index.d.ts.map",
    "lib/",
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "build": "tsc --build --clean && tsc --build && type-coverage",
    "format": "remark --frail --output --quiet -- . && prettier --log-level warn --write -- . && xo --fix",
    "test": "npm run build && npm run format && npm run test-coverage",
    "test-api": "node --conditions development test.js",
    "test-coverage": "c8 --100 --reporter lcov -- npm run test-api"
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "xo": {
    "prettier": true
  },
  "dependencies": {
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "d3-scale-chromatic": "^3.1.0",
    "d3-shape": "^3.2.0",
    "d3-time-format": "^4.1.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/d3-scale": "^4.0.9",
    "@types/d3-shape": "^3.1.7",
    "@types/d3-array": "^3.2.1",
    "@types/d3-scale-chromatic": "^3.1.0",
    "@types/d3-time-format": "^4.0.3",
    "typescript": "^5.8.3",
    "type-coverage": "^2.29.7",
    "prettier": "^3.5.3",
    "remark": "^15.0.1",
    "xo": "^1.1.0"
  }
}
